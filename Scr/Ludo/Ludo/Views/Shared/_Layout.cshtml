<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="site-wrapper">

        <div class="site-wrapper-inner">

            <div class="cover-container">

                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand">Board-Game-Enter-Name-Here</h3>
                        <nav class="nav nav-masthead">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link " + ViewBag.Active1 })
                            @Html.ActionLink("New Game", "New", "Game", null, new { @class = "nav-link " + ViewBag.Active })
                            @Html.ActionLink("Rules", "Rules", "Home", null, new { @class = "nav-link " + ViewBag.Active3 })
                            @Html.ActionLink("Creators", "Creators", "Home", null, new { @class = "nav-link " + ViewBag.Active4 })
                        </nav>
                    </div>
                </div>

                @RenderBody()

            </div>
        </div>
    </div>
</body>
</html>