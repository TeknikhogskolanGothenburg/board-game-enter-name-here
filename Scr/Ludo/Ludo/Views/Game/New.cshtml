@model Ludo.Models.ViewModels.NewGameViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_GameLayout.cshtml";
}
<br />
<h2>Create a new game!</h2>

@using (Html.BeginForm("AddingPlayers", "Game", FormMethod.Get))
{
    <form>
        <div class="form-group">
            <label for="exampleFormControlInput1">Name of the game?</label>
            <input type="text" class="form-control" name="GameName" id="exampleFormControlInput1" placeholder="AwesomeGamenr1">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">How many people are in your group?</label>
            <select class="form-control" id="NumberOfPlayers" name="NumberOfPlayers">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>

      <div class="form-group">
        <label for="playerName-1">Name of Player</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Player 1" name="PlayerName-1">
      </div>
    <div class="form-group">
        <label for="player-1">What color is this player choosing?</label>
        <select class="form-control" id="colorForPlayer-1" name="PlayerColor-1"=>
            <option>Blue</option>
            <option>Yellow</option>
            <option>Red</option>
            <option>Green</option>
        </select>
    </div>
    <div class="form-group">
        <label for="playerName-1">Email addres</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="example@gmail.com" name="PlayerEmail-1">
    </div>
    
        <button type="submit" class="btn btn-primary mb-2">Confirm</button>
    </form>
}